<div class="review-layout">

    <!-- ===================== LEFT SIDE: REVIEW FORM ===================== -->
    <form class="new-review-form" method="post" action="/createreview">

        <!-- Hidden selected book ID -->
        <input type="hidden" name="bookId" value="{{selectedBookId}}">

        <!-- Error message from controller -->
        {{#error}}
        <div class="error-box">
            {{error}}
        </div>
        {{/error}}

        <!-- Book title + search button -->
        <div class="form-group">
            <label for="bookTitle">Book Name</label>
            <div class="book-search-row">
                <input type="text"
                       id="bookTitle"
                       name="bookTitle"
                       class="form-control"
                       placeholder="Enter the book title"
                       value="{{bookTitle}}">

                <!--runs the search -->
                <button type="submit"
                        class="btn btn-secondary book-search-btn"
                        formaction="/createreview/search">
                    üîç
                </button>
            </div>

            <small class="book-search-hint">
                Type a title and click the search icon, then pick the correct book.
            </small>
        </div>

        <!-- Recommended -->
        <div class="form-group">
            <label>Recommended?</label>
            <div class="recommend-toggle">
                <input type="radio" id="recommend-yes" name="recommended" value="true">
                <label for="recommend-yes" class="thumb thumb-up">
                    <i class="fa fa-thumbs-up"></i>
                </label>

                <input type="radio" id="recommend-no" name="recommended" value="false">
                <label for="recommend-no" class="thumb thumb-down">
                    <i class="fa fa-thumbs-down"></i>
                </label>
            </div>
        </div>

        <!-- Review content -->
        <div class="form-group">
            <label for="reviewContent">Review Content</label>
            <textarea id="reviewContent"
                      name="reviewContent"
                      class="form-control"
                      rows="4"
                      placeholder="Write your review here..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">
            Submit Review
        </button>

    </form>



    <!-- ===================== SEARCH RESULTS ===================== -->
    <div class="book-results-panel">

        {{#searchResults}}
            <a class="basic-book-card"
               href="/?bookId={{isbn}}&bookTitle={{title}}">
                {{> fragments/basic_book}}
            </a>
        {{/searchResults}}

        {{^searchResults}}
            <p class="book-results-placeholder">
                Search for a title to see matching books here.
            </p>
        {{/searchResults}}

    </div>

</div>
